body {
    background: url(<%= asset_path 'index-background.jpg' %>) no-repeat center center fixed; 
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
    color: #333;
    font-family: avenir, helvetica, verdana, arial, sans-serif;
    font-size: 13px;
    line-height: 18px;
}

body#about {
    background: url(<%= asset_path 'about-background.jpg' %>) no-repeat center center fixed; 
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
}

body#contact {
    background: url(<%= asset_path 'contact-background.jpg' %>) no-repeat center center fixed; 
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
  }

body#stories {
    background: url(<%= asset_path 'stories-background.jpg' %>) no-repeat center center fixed; 
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
  }

  body#stories div#list {
    display: flex;
  }

  a.story {
    display: flex;
    width: 200px;
    height: 200px;
    flex-direction: column;
    vertical-align: middle;
    justify-content: center;
  }

  a.story > * {
    margin: 0px;
  }

.aside {
  font-size: 1.1em;
}

p, ol, ul, td {
    font-family: avenir, helvetica, verdana, arial, sans-serif;
    font-size: 1.3em;
    line-height: 18px;
}

p {
    margin: 20px;
}

pre {
    background-color: #eee;
    padding: 10px;
    font-size: 11px;
}

a {
    color: #000;

    &:visited {
        color: #666;
  }

  &:hover {
      color: #fff;
      background-color: #000;
  }
}

div {
    &.field, &.actions {
        margin-bottom: 10px;
  }
}

#notice {
    color: green;
}

.field_with_errors {
    padding: 2px;
    background-color: red;
    display: table;
}

#error_explanation {
    width: 450px;
    border: 2px solid red;
    padding: 7px;
    padding-bottom: 0;
    margin-bottom: 20px;
    background-color: #f0f0f0;

    h2 {
        text-align: left;
        font-weight: bold;
        padding: 5px 5px 5px 15px;
        font-size: 12px;
        margin: -7px;
        margin-bottom: 0px;
        background-color: #c00;
        color: #fff;
  }

  ul li {
      font-size: 12px;
      list-style: square;
  }
}

/* My things! */

.navbar-nav {
    float:none;
    margin: 0 auto;
    display: table;
    table-layout: fixed;
}

.navbar {
    background-color: rgba(255, 255, 255, 0.85);
    border: none;
}

div#landing {
    height: 100vh;
    position: relative;
    text-align: center;
    color: white;
    background: url(<%= asset_path 'landing.jpg' %>) no-repeat center center fixed; 
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
}

#landing > div {
    padding-top: 30px;
}

p.scroll-down {
    background-color: white;
    color: rgb(131, 166, 213);
    display: inline-block;
    padding: 20px;
    border-radius: 10px;
}

.scroll-down:hover {
    cursor: pointer;
}

#content {
    margin: 0% 10% 2% 10%;
    background-color: rgba(231, 231, 231, 0.82);
}

#main-nav a {
}

#affix-nav {
    position: fixed;
    width: 100%;
    top: -100px;
}

#affix-nav a {
}

.navbar li.active > a {
    background-color: #555 !important;
    color: #e7e7e7 !important;
}

#affix-nav.affix-top {
    -webkit-transition: all .2s ease-in-out;
}

#affix-nav.affix {
    top: 0;
    -webkit-transition: all .6s ease-in-out;
}

i.scroll-down {
    text-align: center;
    bottom: 20px;
    width:50px;
    height:50px;
    position:absolute;
    left: 0;
    right: 0;
    margin: 0 auto;
    color: rgba(255, 255, 255, 0.85);
}

#content > div {
    margin: 30px;
}

