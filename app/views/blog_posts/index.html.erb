<% content_for :header do %>
    <div id="landing">
        <div>
            <h2>Welcome to the Brink</h2>
        </div>
        <p class="scroll-down">
            Take a jump
        </p>
        <i class="scroll-down fa fa-chevron-circle-down fa-3x"></i>
    </div>
<% end %>
<div>
    <% @blog_posts.each do |blog_post| %>
        <div class="row blog">
            <h1 class="title text-center">
                <a href="/blog/<%= blog_post.id %>"><%= blog_post.title %></a>
            </h1>
            <h5 class="text-right">
              <%= blog_post.created_at.in_time_zone('Pacific Time (US & Canada)').strftime("%B %e, %Y") %>
            </h5>
            <p>
                <%= blog_post.body.html_safe %>
            </p>
            <h4 class="text-center">
                <%= blog_post.tagline %>
            </h4>
        </div>
        <hr style="border-color: black">
    <% end %>
</div>
