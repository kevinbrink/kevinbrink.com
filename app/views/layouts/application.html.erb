<!DOCTYPE html>
<html>
    <head>
        <title>The Brink</title>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
        <%= csrf_meta_tags %>
    </head>
    <body id="<%= action_name%>">
        <nav class="navbar navbar-default navbar-static-top" id="affix-nav">
            <%= render "shared/navigation_content" %>
        </nav>
        <%= notice %>
        <%= yield :header %>
        <nav class="navbar navbar-default" id="main-nav">
            <%= render "shared/navigation_content" %>
        </nav>
        <div id="content" class="container-fluid text-left">
            <div class="row">
                <div class="col-xs-10 col-xs-offset-1">
                    <%= yield %>
                </div>
            </div>
        </div>
    </body>
</html>
